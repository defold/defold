#! /usr/bin/env python

def build(bld):
    libs = 'APP PLATFORM_SOCKET GRAPHICS_NULL DDF SCRIPT EXTENSION RESOURCE DLIB LUA CARES'

    bld.new_task_gen(features = 'cxx cprogram test',
                    source = 'test_render.cpp',
                    uselib = libs,
                    uselib_local = 'render',
                    web_libs = ['library_sys.js', 'library_script.js'],
                    includes = ['../../src', '../../proto'],
                    target = 'test_render')

    bld.new_task_gen(features = 'cxx cprogram test',
                    source = 'test_display_profiles.cpp',
                    uselib = libs,
                    uselib_local = 'render',
                    web_libs = ['library_sys.js', 'library_script.js'],
                    includes = ['../../src', '../../proto'],
                    target = 'test_display_profiles')

    bld.new_task_gen(features = 'cxx cprogram test',
                    source = 'test_material.cpp',
                    uselib = libs,
                    uselib_local = 'render',
                    web_libs = ['library_sys.js', 'library_script.js'],
                    includes = ['../../src', '../../proto'],
                    target = 'test_material')

    bld.new_task_gen(features = 'cxx cprogram test',
                    source = 'test_render_script.cpp',
                    uselib = libs,
                    uselib_local = 'render',
                    web_libs = ['library_sys.js', 'library_script.js'],
                    includes = ['../../src', '../../proto'],
                    target = 'test_render_script')
