require "lua.test_helpers"

local function test_all_aabb(self)
    local res = model.get_aabb("#model")
    local cube_aabb = res[hash("Cube")]
    assert_not_nil(cube_aabb)
    assert_vec3(cube_aabb.min, vmath.vector3(-50.000019073486, -50, -50.000019073486))
    assert_vec3(cube_aabb.max, vmath.vector3(50.000019073486, 50, 50.000030517578))
end

local function test_one_aabb(self)
    local res = model.get_aabb("#model", "Cube")
    assert_vec3(res.min, vmath.vector3(-50.000019073486, -50, -50.000019073486))
    assert_vec3(res.max, vmath.vector3(50.000019073486, 50, 50.000030517578))
    local res1 = model.get_aabb("#model", hash("Cube"))
    assert_vec3(res1.min, vmath.vector3(-50.000019073486, -50, -50.000019073486))
    assert_vec3(res1.max, vmath.vector3(50.000019073486, 50, 50.000030517578))
end

local function test_wrong_argument_type(self)
    assert_error(function()
        local res = model.get_aabb("#model", 34)
    end)
end

local function test_wrong_mesh_id(self)
    local res = model.get_aabb("#model", "Sword")
    assert_number(#res, 0)
    local res1 = model.get_aabb("#model", hash("Sword"))
    assert_number(#res1, 0)
end

local function test_wrong_component_url(self)
    assert_error(function()
        local res = model.get_aabb("#invalid_model")
    end)
    assert_error(function()
        local res = model.get_aabb("#invalid_model", "Sword")
    end)
end

function init(self)
    test_all_aabb(self)
    test_one_aabb(self)
    test_wrong_argument_type(self)
    test_wrong_component_url(self)
    test_wrong_mesh_id(self)
end
