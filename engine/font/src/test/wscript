#! /usr/bin/env python

from waflib.Options import options

def build(bld):
    if options.skip_build_tests:
       return

    bld.add_group()

    bld(features = 'cxx cprogram ddf test',
        source   = bld.path.ant_glob(['*.cpp']),
        use      = 'TESTMAIN DLIB PROFILE_NULL font',
        includes = '. .. ../font',
        target = 'test_font')

    bld(features = 'cxx cprogram ddf test',
        source   = bld.path.ant_glob(['*.cpp']),
        use      = 'TESTMAIN DLIB PROFILE_NULL font_kb',
        includes = '. .. ../font',
        target = 'test_font_kb')
