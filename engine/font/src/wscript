#! /usr/bin/env python
import os
from waf_dynamo import dmsdk_add_files

def options(opt):
    pass

def build(bld):

    dmsdk_add_files(bld, '${PREFIX}/sdk/include/dmsdk', 'dmsdk')

    bld.stlib(features          = 'cxx ddf',
                includes        = ['.', '..'],
                target          = 'font',
                defines         = [],
                source          = bld.path.ant_glob(['*.cpp']) + ['text_shape/text_shape_legacy.cpp'])

    bld.stlib(features          = 'cxx ddf',
                includes        = ['.', '..', '../build/proto'],
                target          = 'font_kb',
                defines         = ['FONT_USE_KB_TEXT_SHAPE'],
                source          = bld.path.ant_glob(['*.cpp']) + ['text_shape/text_shape_kb.cpp'])

    bld.recurse('test')

def configure(conf):
    pass

