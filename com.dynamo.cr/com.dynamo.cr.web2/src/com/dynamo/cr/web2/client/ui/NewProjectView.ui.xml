<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <div class="row">
        <div class="span8">
        <div class="page-header">
            <h1>New Project</h1>
        </div>
        <form class="form-horizontal well">
            <div ui:field="nameGroup" class="control-group">
                <label class="control-label">Name</label>
                <div class="controls">
                    <g:TextBox ui:field="nameTextBox" />
                    <span ui:field="nameHelp" class="help-inline">Project name is required</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Description</label>
                <div class="controls">
                    <g:TextBox ui:field="descriptionTextBox" />
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Template</label>
                <div class="controls">
                    <g:ListBox ui:field="templatesCombo" />
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <g:Button ui:field='createButton'>Create Project</g:Button>
                </div>
            </div>
        </form>
        <div style="height: 100px;"></div>
        </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
