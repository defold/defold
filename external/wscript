#! /usr/bin/env python

srcdir = '.'
blddir = 'build'

import os, sys, re
import waf_dynamo, waf_package
import waflib.Task

PACKAGES='glfw bullet3d box2d box2d_v2 opus harfbuzz sheenbidi'.split()

def get_packages():
    return PACKAGES

def options(opt):
    opt.load('waf_dynamo')

    for d in get_packages():
        opt.recurse(d)

def configure(conf):
    conf.load('waf_dynamo')

    for d in get_packages():
        conf.recurse(d)

def build(bld):
    for d in get_packages():
        bld.recurse(d)

def package(ctx):
    for d in get_packages():
        ctx.recurse(d)
