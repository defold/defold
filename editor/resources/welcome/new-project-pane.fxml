<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox id="new-project-pane" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx">
    <HBox id="template-categories" styleClass="tab-header-pane" />
    <ListView id="template-list" styleClass="template-list-view" VBox.vgrow="ALWAYS" />
    <HBox styleClass="form-pane">
        <HBox minWidth="180" maxWidth="180" HBox.hgrow="NEVER">
            <Label text="Title" styleClass="field-label" minWidth="-Infinity" HBox.hgrow="NEVER"/>
            <TextField id="new-project-title-field" text="My Project" HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox HBox.hgrow="ALWAYS">
            <Label text="Location" styleClass="field-label" minWidth="-Infinity" HBox.hgrow="NEVER" />
            <HBox id="new-project-location-field" HBox.hgrow="ALWAYS" />
        </HBox>
        <HBox HBox.hgrow="NEVER">
            <Button id="create-new-project-button" styleClass="df-button, submit-button" text="Create New Project" HBox.hgrow="NEVER" />
        </HBox>
    </HBox>
</VBox>
